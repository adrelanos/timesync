DISPATCH_POST_ERROR='/usr/lib/timesync/timesync_post_error "$error_message" & disown'

DISPATCH_POST_SUCCESS='/usr/lib/timesync/timesync_post_success --autostart --mode $SDW_MODE'

DISPATCH_POST_FAILURE='/usr/lib/timesync/timesync_post_failure --autostart --mode $SDW_MODE'

